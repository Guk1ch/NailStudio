<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:layout_height="225dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/stroke_image"
    android:padding="1.5dp">


    <ImageView
        android:id="@+id/imgNail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/short_second_elepse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePicture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/demo_image"
        app:layout_constraintBottom_toBottomOf="@+id/imgNail"
        app:layout_constraintEnd_toEndOf="@+id/imgNail"
        app:layout_constraintStart_toStartOf="@+id/imgNail"
        app:layout_constraintTop_toTopOf="@+id/imgNail" />


</androidx.constraintlayout.widget.ConstraintLayout>